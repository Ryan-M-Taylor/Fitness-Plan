<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New workout:</h3>

    <form class="form new-workout-form">
      <div class="form-group">
        <label for="workout-name">workout name:</label>
        <input class="form-input" type="text" id="workout-name" name="workout-name" />
      </div>
      <div class="form-group">
        <label for="workout-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="workout-funding" name="workout-funding" />
      </div>
      <div class="form-group">
        <label for="workout-desc">description:</label>
        <textarea class="form-input" id="workout-desc" name="workout-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if workouts.length}}
  <div class="col-md-6 workout-list">
    <h3>Current workouts:</h3>

    {{#each workouts as |workout|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/workout/{{workout.id}}">{{workout.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{workout.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>

